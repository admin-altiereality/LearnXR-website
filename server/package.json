{
  "name": "blockadelabs-sdk-node-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "dev": "cross-env NODE_ENV=development tsx watch ./src/server.ts",
    "build": "npm run build:client && npm run build:server",
    "build:server": "tsup",
    "build:client": "cd client && npm install && npm run build",
    "install:all": "npm install && cd client && npm install"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.15.11",
    "cross-env": "^7.0.3",
    "tsup": "^6.7.0",
    "tsx": "^3.12.6",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@blockadelabs/sdk": "^1.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "envsafe": "^2.0.3",
    "express": "^4.18.2",
    "firebase": "^11.8.1",
    "firebase-admin": "^13.4.0",
    "multer": "^1.4.5-lts.1",
    "razorpay": "^2.9.6"
  }
}
